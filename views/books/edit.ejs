<% include ../shared/header.ejs %>

<h1>Book Details</h1>

<form action="/books/edit" method="post">
    <input type="hidden" name="id" value="<%= book._id %>">

    <fieldset class="form-group">
        <label class="control-label col-md-2" for="author">Author: *</label>
        <input name="author" id="author" required value="<%= book.author %>">
    </fieldset>

    <fieldset class="form-group">
        <label class="control-label col-md-2" for="name">Name: *</label>
        <input name="name" id="name" required value="<%= book.name %>">
    </fieldset>

    <fieldset class="form-group">
        <label class="control-label col-md-2" for="year">Year: *</label>
        <input name="year" id="year" required type="number" min="1900" value="<%= book.year %>">
    </fieldset>

    <fieldset class="form-group">
        <label class="control-label col-md-2" for="price">Price: *</label>
        <input name="price" id="price" required type="number" min="0" value="<%= book.price %>">
    </fieldset>

    <fieldset class="form-group">
        <label class="control-label col-md-2" for="colour">Colour: </label>
        <input name="colour" id="colour" value="<%= book.colour %>">
    </fieldset>
    <button class="offset-2 btn btn-primary">Save</button>
</form>

<% include ../shared/footer.ejs %>