<% include ../shared/header%>

<h1>Books Inventory</h1>

<a href="/books/add">Add a New Book</a>

<table class="table table-striped table-hover">
     <tr>
         <th>Author</th>
         <th>Name</th>
         <th>Year</th>
         <th>Price</th>
         <th>Actions</th>
     </tr>
    <% for(let i = 0; i < books.length; i++) { %>
         <tr>
             <td><%= books[i].author %></td>
             <td><%= books[i].name %></td>
             <td><%= books[i].year%></td>
             <td><%= books[i].price %></td>

             <td>
                 <a class="btn btn-info" href="/books/edit/<%= books[i]._id %>">Edit</a>
                 <a class="btn btn-danger" href="/books/delete/<%= books[i]._id %>"
                 onclick="return confirm('Do you want to delete these details?');
                 ">Delete</a></td>
         </tr>
    <% } %>
</table>

<% include ../shared/footer%>